<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Barattopoli" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_500</item>
        <item name="colorSecondaryVariant">@color/indigo_600</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->

        <item name="android:buttonTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>

        <item name="bgGradientTopColor">@color/black</item>
        <item name="bgGradientBottomColor">@color/zinc_900</item>

        <item name="paddingSm">10dp</item>
        <item name="paddingMd">20dp</item>
        <item name="paddingLg">30dp</item>
        <item name="paddingXl">40dp</item>
    </style>
</resources>